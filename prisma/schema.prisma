
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Users {
  id Int @id @default(autoincrement())
  name String 
  login String @unique
  password String
  createdAt DateTime @default(now())
  role String
  status String
  managedProjects Projects[]
}

model Projects {
  id Int @id @default(autoincrement())
  name String 
  projectManager Users[]
  createdAt DateTime @default(now())
  dueDate String
  progress String
  status String
}